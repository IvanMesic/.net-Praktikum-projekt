<Window x:Class="MojZabavniWpfApp.SettingsForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MojZabavniWpfApp"
        mc:Ignorable="d"
        Title="SettingsForm" Height="345" Width="272">
    <Grid Margin="0,0,0,-6">
        <ComboBox x:Name="cbDataSource" HorizontalAlignment="Center" Margin="0,41,0,0" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="cbGender" HorizontalAlignment="Center" Margin="0,102,0,0" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="cbLanguage" HorizontalAlignment="Center" VerticalAlignment="Center" Width="120"/>
        <Button x:Name="btnSave" Content="Save" HorizontalAlignment="Left" Margin="115,271,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.072,0.542" Click="btnSave_Click"/>
        <ComboBox x:Name="cbResolution" HorizontalAlignment="Center" Margin="0,216,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="ComboBox_SelectionChanged"/>

    </Grid>
</Window>
